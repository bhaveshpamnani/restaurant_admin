    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const menuItems = document.querySelectorAll(".menu-item");

            // Add event listener to each menu item for click handling
            menuItems.forEach((item) => {
                item.addEventListener("click", function () {
                    // Remove 'active' class from all menu items
                    menuItems.forEach((el) => el.classList.remove("active"));

                    // Add 'active' class to the clicked item
                    this.classList.add("active");
                });
            });

            // Highlight the default menu item (Dashboard) if no other item matches
            const currentPath = window.location.pathname;
            let activeSet = false;

            menuItems.forEach((item) => {
                const link = item.querySelector("a");
                if (link && link.getAttribute("href") === currentPath) {
                    item.classList.add("active");
                    activeSet = true;
                }
            });

            // If no other item is active, default to Dashboard
            if (!activeSet) {
                const dashboardItem = document.querySelector(".menu-item:first-child");
                dashboardItem?.classList.add("active");
            }
        });

    </script>

