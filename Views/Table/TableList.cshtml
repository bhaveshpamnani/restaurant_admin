                        </div>
                        <hr class="d-none d-sm-block d-lg-none me-6">
                    </div>
                    <div class="col-sm-6 col-lg-3">
                        <div class="d-flex justify-content-between align-items-start card-widget-2 border-end pb-4 pb-sm-0">
                            <div>
                                <h4 class="mb-0">12,689</h4>
                                <p class="mb-0">Completed</p>
                            </div>
                            <span class="avatar w-px-40 h-px-40 p-2 me-lg-6">
                                <span class="avatar-initial bg-label-secondary rounded">
                                    <i class="icon-base bx bx-check-double icon-lg text-heading"></i>
                                </span>
                            </span>
                        </div>
                        <hr class="d-none d-sm-block d-lg-none">
                    </div>
                    <div class="col-sm-6 col-lg-3">
                        <div class="d-flex justify-content-between align-items-start border-end pb-4 pb-sm-0 card-widget-3">
                            <div>
                                <h4 class="mb-0">124</h4>
                                <p class="mb-0">Refunded</p>
                            </div>
                            <span class="avatar w-px-40 h-px-40 p-2 me-sm-6">
                                <span class="avatar-initial bg-label-secondary rounded">
                                    <i class="icon-base bx bx-wallet icon-lg text-heading"></i>
                                </span>
                            </span>
                        </div>
                    </div>
                    <div class="col-sm-6 col-lg-3">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <h4 class="mb-0">32</h4>
                                <p class="mb-0">Failed</p>
                            </div>
                            <span class="avatar w-px-40 h-px-40 p-2">
                                <span class="avatar-initial bg-label-secondary rounded">
                                    <i class="icon-base bx bx-error-alt icon-lg text-heading"></i>
                                </span>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!--  Dinning Table List -->
    <div class="card">
        <div class="card-datatable table-responsive">
            <div id="DataTables_Table_0_wrapper" class="dt-container dt-bootstrap5 dt-empty-footer">
                <div class="row ms-3 my-0 justify-content-between">
                    <div class="d-md-flex justify-content-between align-items-center dt-layout-start col-md-auto me-auto px-3 mt-0">
                        <div class="dt-search">
                            <input type="search" class="form-control ms-0" id="dt-search-0" placeholder="Search Order" aria-controls="DataTables_Table_0"><label for="dt-search-0"></label>
                        </div>
                    </div>
                    <div class="d-md-flex justify-content-between align-items-center dt-layout-end col-md-auto ms-auto px-3 mt-0">
                        <div class="dt-length mt-md-6 mt-0">
                            <select name="DataTables_Table_0_length" aria-controls="DataTables_Table_0" class="form-select" id="dt-length-0">
                                <option value="Reserved">Reserved</option><option value="Free">Free</option>
                            </select><label for="dt-length-0"></label>
                        </div>
                        <!-- Button to Trigger Modal -->
                        <button class="btn btn-primary m-3" data-bs-toggle="modal" data-bs-target="#addTableModal">
                            <span>
                                <i class="icon-base bx bx-plus me-1 icon-xs"></i>
                                <span class="d-inline-block">Add Dining Table</span>
                            </span>
                        </button>
                    </div>
                </div>
                <div class="justify-content-between dt-layout-table">
                    <div class="d-md-flex justify-content-between align-items-center dt-layout-full table-responsive">
                        <table class="table table-striped table-bordered table-hover text-center">
                            <thead class="table-dark">
                            <tr>
                                <th>TableID</th>
                                <th>Table Code</th>
                                <th>Table Status</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            <tr>
                                <td>#8005</td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <strong>Table Code</strong>
                                    </div>
                                </td>
                                <td class="text-danger">Reserved</td>
                                <td>
                                    <div class="btn-group">
                                        <a href="app-ecommerce-order-details.html" class="btn btn-primary btn-sm">Edit</a>
                                        <button class="btn btn-danger btn-sm">Delete</button>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td>#8005</td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="d-flex align-items-center">
                                            <strong>Table Code</strong>
                                        </div>
                                    </div>
                                </td>
                                <td class="text-success">Free</td>
                                <td>
                                    <div class="btn-group">
                                        <a href="app-ecommerce-order-details.html" class="btn btn-primary btn-sm">Edit</a>
                                        <button class="btn btn-danger btn-sm">Delete</button>
                                    </div>
                                </td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

<!-- Modal -->
<div class="modal fade" id="addTableModal" tabindex="-1" aria-labelledby="addTableModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <h5 class="modal-title" id="addTableModalLabel">Add Dining Table</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <!-- Modal Body -->
            <div class="modal-body">
                <form id="addTableForm">
                    <div class="mb-3">
                        <label for="tableNumber" class="form-label">Table Code</label>
                        <input type="text" class="form-control" id="tableNumber" placeholder="Enter table number" required>
                    </div>
                    <div class="mb-3">
                        <label for="seatingCapacity" class="form-label">Seating Capacity</label>
                        <input type="number" class="form-control" id="seatingCapacity" placeholder="Enter seating capacity" required>
                    </div>
                    <div class="">
                        <label class="form-label" for="basic-default-country">Table Status</label>
                        <select class="form-select" id="status" required="">
                            <option value="">Select Status</option>
                            <option value="Free">Free</option>
                            <option value="Reserved">Reserved</option>
                        </select>
                    </div>
                </form>
            </div>

            <!-- Modal Footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary m-3" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="submitTableForm()">Save Table</button>
            </div>
        </div>
    </div>
</div>

<!-- Script -->
<script>
    function submitTableForm() {
        const tableNumber = document.getElementById('tableNumber').value;
        const seatingCapacity = document.getElementById('seatingCapacity').value;
        const location = document.getElementById('basic-default-country status').value;

        if (tableNumber && seatingCapacity && location) {
            console.log({
                tableNumber,
                seatingCapacity,
                location
            });
            alert('Table added successfully!');
            // Reset the form
            document.getElementById('addTableForm').reset();
            // Close the modal
            const modal = bootstrap.Modal.getInstance(document.getElementById('addTableModal'));
            modal.hide();
        } else {
            alert('Please fill out all fields.');
        }
    }
</script>